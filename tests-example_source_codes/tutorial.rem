## simple data manipulation
let my_data = %{
   "name": "reisen",
   "age": 16,
   "sex": 0
}

/* for-loop */
from
   my_data
not yield
   {|(k, v)|
    print $ "my " + k + " is " + v.string
   }

/* for-compreshension */
from my_data yield {_} . tuple . print

/* pattern matching */
my_data!["nested"] = [1, 2, 3]
case my_data
   as {"name": "marisa"} => None
   as {"name": "pad"   } => None
   as {"name": "reisen"} when my_data!["age"] > 20
                         => None
   as {"name": "reisen", "nested": [a, ...b]} 
                         => 
                           [a, b . list]
end
then print


